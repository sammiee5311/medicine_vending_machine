<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .black_overlay{
            display: none;
            position: absolute;
            top: 0%;
            left: 0%;
            width: 100%;
            height: 100%;
            background-color: black;
            z-index:1001;
            -moz-opacity: 0.8;
            opacity:.80;
            filter: alpha(opacity=80);
        }
        .white_content {
            display: none;
            position: absolute;
            top: 25%;
            left: 25%;
            width: 50%;
            height: 50%;
            padding: 16px;
            border: 16px solid orange;
            background-color: white;
            z-index:1002;
            overflow: auto;
        }

    </style>
    </head>
    <body>
        <main>
            <div class="black_overlay">
                <ul class="white_content">
                    <% medicines.forEach(medi => { %>
                        <li >
                            <h1><%= medi.medicine.name %> 물품: <%= medi.quantity %> 개</h1>
                        </li>
                    <% }) %>
                </ul>
                <div>
                    <h2>총 가격: <%= price %></h2>
                </div>
                <button class="btn" type="button" onclick="checkout(this)">결제하기</button>  
                <button class="btn" type="button" onclick="cancel(this)">취소하기</button>  
            </div>
        </main>
        <script src="/js/checkout.js"></script>
<%- include('../includes/end.ejs') %>